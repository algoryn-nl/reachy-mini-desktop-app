{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Reachy Mini Control",
  "version": "0.9.7",
  "identifier": "com.pollen-robotics.reachy-mini",
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Reachy Mini",
        "width": 450,
        "height": 670,
        "resizable": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "hiddenTitle": true,
        "titleBarStyle": "Transparent",
        "devtools": true,
        "backgroundThrottling": "disabled"
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["app", "msi", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/uv-trampoline"
    ],
    "resources": [
      "../scripts/avast_ssl_fix.py"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://pollen-robotics.github.io/reachy-mini-desktop-app/latest.json"
      ],
      "dangerousInsecureTransportProtocol": false,
      "dangerousAllowDowngrades": true,
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNBNDFBQUFGQkFCOTY2NQpSV1JsbHF2N3FocWtBM2pkdlhBVUpXNFkwZkc1dWdHK09NcklYNGthR1dHbVR1aDQ0NlIxR3oyUgo="
    },
    "deep-link": {
      "desktop": {
        "schemes": ["reachymini"]
      }
    }
  }
}